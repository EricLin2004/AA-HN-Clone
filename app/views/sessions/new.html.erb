<h2>Log in as an existing user</h2>

<%= form_for(@user, :url => '/sessions') do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in"%>

<% end %>

<h2>Create a New User</h2>

<%= form_for(@user, :url => '/users') do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <ul>
    <%= f.fields_for :emails do |emails_form| %>
    <li>
      <%#= check_box :_destroy %>
      <%= emails_form.label :address %>
      <%= emails_form.text_field :address %>
    </li>
    <% end %>
  </ul>
  <%= f.submit "Create New User"%>

<% end %>